<Window x:Class="Client.Views.VoyageFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voyage Form" Height="500" Width="500" WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Code -->
        <TextBlock Text="Code:" Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Code}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

        <!-- Departure Time -->
        <TextBlock Text="Departure:" Grid.Row="1" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <DatePicker SelectedDate="{Binding DepartureTime}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

        <!-- Arrival Time -->
        <TextBlock Text="Arrival:" Grid.Row="2" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <DatePicker SelectedDate="{Binding ArrivalTime}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

        <!-- Captain Message -->
        <TextBlock Text="Captain Message:" Grid.Row="3" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CaptainMessage}" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>

        <!-- Distance -->
        <TextBlock Text="Distance:" Grid.Row="4" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Distance}" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5"/>

        <!-- Ship Selection -->
        <TextBlock Text="Ship:" Grid.Row="5" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding AvailableShips}" 
                  SelectedItem="{Binding SelectedShip}" 
                  DisplayMemberPath="Name" 
                  Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"/>
        <Button Content="Add New" Grid.Row="5" Grid.Column="2" Command="{Binding AddShipCommand}"/>

        <!-- Departure Port Selection -->
        <TextBlock Text="Departure Port:" Grid.Row="6" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding AvailablePorts}" 
                  SelectedItem="{Binding SelectedDeparturePort}" 
                  DisplayMemberPath="Name" 
                  Grid.Row="6" Grid.Column="1" Margin="0,0,0,5"/>
        <Button Content="Add New" Grid.Row="6" Grid.Column="2" Command="{Binding AddPortCommand}"/>

        <!-- Arrival Port Selection -->
        <TextBlock Text="Arrival Port:" Grid.Row="7" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding AvailablePorts}" 
                  SelectedItem="{Binding SelectedArrivalPort}" 
                  DisplayMemberPath="Name" 
                  Grid.Row="7" Grid.Column="1" Margin="0,0,0,5"/>
        <Button Content="Add New" Grid.Row="7" Grid.Column="2" Command="{Binding AddPortCommand}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="9" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>